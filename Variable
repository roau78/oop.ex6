package oop.ex6.workSpace;

import lineComponents.VariableType;


public class Variable 
{
	private VariableType type;
	final private String name;
	private boolean isInitialized;
	final private boolean isFinal;
	// to check if it can be used in methods deceleration
	private boolean isGlobal;

	

	public Variable(VariableType type, String name, boolean isInitialized, boolean isFinal, boolean isGlobal)
	{
		this.type = type;
		this.name = name;
		this.isInitialized = isInitialized;
		this.isFinal = isFinal;
		this.isGlobal = isGlobal;
	}

	public boolean isInitialized()
	{
		return isInitialized;
	}
	
	public void setInitialized() 
	{
		this.isInitialized = true;
	}
	
	public VariableType getType() 
	{
		return type;
	}
	
	public String getName()
	{
		return name;
	}
	
	public boolean isFinal() 
	{
		return isFinal;
	}

	public boolean isGlobal()
	{
		return isGlobal;
	}
}
